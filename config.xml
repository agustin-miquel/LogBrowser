<config>
	<dateFormat>yyyy-MM-dd</dateFormat>
	<dateSeparator>.</dateSeparator>
	<downloadBaseFolder>c:/devel/logs/</downloadBaseFolder>
	<downloadExtension>.log</downloadExtension>
	<apps>
		<appConfig name="LOCAL">
			<logs>
				<logConfig type="LOCAL" basedir="./testdata/">
					<file>test.log</file>
				</logConfig>
				<logConfig type="LOCAL" alias="apache" basedir="./testdata/apache_logs/" canBeCompressed="GZ">
					<file>error.log{date}</file>
				</logConfig>
			</logs>
		</appConfig>

		<appConfig name="PROD">
			<logs>
				<logConfig type="HTTP" host="https://github.com/agustin-miquel/LogBrowser" alias="github"
					user="" pwd="" basedir="/blob/master/">
					<file>pom.xml</file>
					<file>config.xml</file>
				</logConfig>
			</logs>
		</appConfig>

		<appConfig name="DEV">
			<logs>
				<logConfig type="SSH" host="ftp.cesca.es" user="anonymous" pwd="">
					<file>/centos/2.1/readme.txt</file>
				</logConfig>
			</logs>
		</appConfig>
	</apps>
</config>